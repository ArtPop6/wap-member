.order-wrap
  width 100%
  height 100%
  display flex
  flex-direction column
  background #FAFAFC

  .order-type
    overflow hidden
    height 168px
    width 100%
    background $primary-color
    display flex
    justify-content space-between
    align-items flex-end
    padding 30px 0 0 50px
    box-shadow 0 -2px 0 0 rgb(221, 221, 221, 1)

    .order-desc
      width 60%
      // margin-bottom 58px
      display flex
      flex-direction column

      .icon-tip
        color #000
        font-size 36px
        height 50px
        font-weight bold
        display flex
        align-items center
        margin-bottom 59px
        
        .order-icon
          width 40px
          height 40px
          margin-right 20px

        .order-tip
          line-height 50px
      
      .state_wait
        color #000
        // width 60%
        height 98px
        display flex
        flex-direction column
        align-items flex-start
        margin-bottom 35px

        .state_wait--title
          font-size 36px
          height 50px
          line-height 50px
          margin-bottom 8px
          font-weight bold

        .remain-time
          color #777A88
          font-size 28px
          display flex
          align-items center

          .formate-time
            color #777A88
            font-size 28px

    .decorate-pic
      width 211px
      height 160px
      animation a-c-paper 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both
      -webkit-animation a-c-paper 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both

      @keyframes a-c-paper
        0%
          opacity 0
          transform translate(0px, 142px) scale(0.9, 1.1)

        30%
          transform translate(0px, -10px) scale(1.2, 0.8)

        60%
          transform translate(0px, 5px) scale(0.95, 1.05)

        80%
          transform translate(0px, -2px) scale(1.02, 0.98)

        100%
          opacity 1
          transform translate(0px, 0px) scale(1, 1)

.order-detail
  flex 1
  width 100%
  padding 20px 20px
  overflow auto

  .personal-info
    height 148px
    width 100%
    margin-bottom 20px
    display flex
    align-items flex-end
    background rgba(255, 255, 255, 1)
    padding 30px
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.1)

    .avatar
      width 88px
      height 88px
      border-radius 8px
      border 2px solid #ebebeb

    .right-part
      margin-left 30px
      height 100%
      display flex
      flex-direction column
      justify-content space-between
      align-items flex-end

      .nick-name
        width 100%
        font-size 32px
        font-weight bold
        height 45px
        font-family PingFangSC-Medium,PingFang SC
        font-weight 600
        margin-bottom 3px

      .tele
        width 100%
        font-size 28px
        height 45px
        color #777A88

  .card-info
    height 220px
    width 100%
    background #fff
    margin-bottom 20px
    display flex
    padding 21px 21px 20px 21px
    justify-content space-between
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.1)

    .card-pic
      width 351px
      height 100%
      position relative

      .card-pic__url
        width 100%
        height 100%

      .card-pic-type
        position absolute
        width 100%
        height 45px
        left 20px
        top 91px
        font-size 32px
        font-weight 500
        color #F5EDBC
        z-index 10

      .card-pic-desc
        position absolute
        height 30px
        width 100%
        left 20px
        top 136px
        font-size 22px
        font-weight 400
        color #C0C0C0
        z-index 10

    .card-desc
      width 389px
      height 100%
      margin-left 30px
      overflow hidden

      .card-name
        width 100%
        height 45px
        display flex
        font-size 32px
        justify-content space-between
        margin-bottom 6px
        align-items center

        .type-name
          width 80%
          font-size 32px
          font-weight bold
          white-space nowrap
          overflow hidden

        .type-time
          font-size 22px
          height 32px
          width 60px
          color #fff
          text-align center
          line-height 32px
          border-radius 3px
        
        .yellow
          background #fcdb00

        .orange
          background #FFA97D

        .blue
          background #87B2FF

        .pink
          background #FF89A9

        .default
          background grey

      .card-site
        width 100%
        font-size 28px
        height 40px
        color #777A88
        white-space nowrap
        overflow hidden

      .apply
        display flex
        font-size 28px

        .apply__desc
          white-space nowrap


        .apply__stores::-webkit-scrollbar
          display none

        .apply__stores
          margin-bottom 43px
          font-size 28px
          height 40px
          width 100%
          display flex
          overflow auto
          white-space nowrap

          .store-tag
            white-space nowrap
            color #777A88
            height 100%
            margin-right 8px
            // border 2px solid $primary-color
            // border-radius 3px
            // padding 1px 5px

      .card-num
        display flex
        flex-direction column
        align-items flex-end
        justify-content space-between

        .pay-price
          font-size 32px
        .pay-num
          font-size 28px
          color #777A88

  .order-info
    width 100%
    background #fff
    border-radius 0 0 16px 16px
    display flex
    flex-direction column
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.1)

    .order-title
      font-size 28px
      font-weight bold
      padding 16px 27px
      // box-shadow 0 1px 0 0 rgba(229, 229, 229, 1)
      border-bottom 1px solid #E5E5E5
      margin-bottom 10px

    .order-number
      padding 20px 27px
      display flex

      .order-number__title
        font-size 28px
        color #777A88

      .order-number__num
        color #000
        font-size 28px

    .create-time
      padding 0 30px 22px 27px
      font-size 28px
      color #777A88
      display flex

      .time
        color #000

    .pay-time
      padding 0 30px 23px 27px
      font-size 28px
      color #777A88
      display flex

      .time
        color #000

.pay-info
  height 98px
  border-top 1px solid #ebebeb
  background #fff
  display flex
  justify-content space-between
  align-items center
  padding 0 40px 0 30px
  box-shadow -2px 3px 8px rgb(212, 212, 212)
  // border-radius 30px 30px 0 0
  position relative

  .sum-price
    font-size 28px

    .price-title
      color #E61111

  .pay-btn
    background $primary-color
    color #000
    border 1px solid $primary-color
    font-size 24px
    padding 13px 80px
    line-height 33px
    height 60px
    width 256px
    border-radius 8px
    white-space nowrap